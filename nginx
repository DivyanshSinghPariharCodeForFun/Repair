server {
    listen 443 ssl;
    server_name uat-ers.religare.in;

    ssl_certificate /etc/ssl/religare/religare.in.crt;
    ssl_certificate_key /etc/ssl/religare/religare.in.key;

    # HSTS
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    root /opt/erapp/frontend/build;
    index index.html;

    # Serve static assets
    location /static/ {
        root /opt/erapp/frontend/build;
        expires 30d;
        add_header Cache-Control "public, max-age=2592000";
        try_files $uri =404;
    }

    # Serve other assets (fonts, images, etc.)
    location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|ttf|svg|eot|otf|json)$ {
        root /opt/erapp/frontend/build;
        expires 30d;
        add_header Cache-Control "public, max-age=2592000";
        try_files $uri =404;
    }

    # SPA fallback â€” always serve index.html for unknown paths
    location / {
        try_files $uri /index.html;
    }
}

server {
    listen 80;
    server_name uat-ers.religare.in;
    return 301 https://$host$request_uri;
}
